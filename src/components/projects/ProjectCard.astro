---
import Button from '../ui/Button.astro';
import Card from '../ui/Card.astro';
import Tag from '../ui/Tag.astro';

interface ProjectLinks {
  caseStudy?: string;
  code?: string;
  demo?: string;
}

interface ProjectCardProps {
  slug: string;
  title: string;
  summary: string;
  status: string;
  tags: string[];
  links: ProjectLinks;
  featured?: boolean;
}

const {
  slug,
  title,
  summary,
  status,
  tags = [],
  links = {},
  featured = false,
} = Astro.props as ProjectCardProps;

const detailHref = `/projects/${slug}`;
const actions = [
  { label: 'View project', href: detailHref },
  links.caseStudy ? { label: 'Case Study', href: links.caseStudy } : undefined,
  links.code ? { label: 'Code', href: links.code } : undefined,
  links.demo ? { label: 'Demo', href: links.demo } : undefined,
]
  .filter((action): action is { label: string; href: string } => Boolean(action))
  .map((action) => ({
    ...action,
    isExternal: action.href.startsWith('http'),
  }));
---

<Card
  variant={featured ? 'soft' : 'default'}
  interactive={true}
  class="project-card"
>
  <div slot="title" class="project-card__title">
    <div class="project-card__meta">
      <Tag tone={featured ? 'accent' : 'default'}>{status}</Tag>
      {featured && <Tag tone="muted">Featured</Tag>}
    </div>
    <h3>
      <a class="project-card__title-link" href={detailHref}>{title}</a>
    </h3>
  </div>

  <p>{summary}</p>

  <div class="project-card__tags" aria-label={`${title} tags`}>
    {tags.map((tag) => (
      <Tag tone="muted">{tag}</Tag>
    ))}
  </div>

  {actions.length > 0 && (
    <div slot="actions">
      {actions.map((action, index) => (
        <Button
          variant={index === 0 ? 'primary' : 'secondary'}
          href={action.href}
          target={action.isExternal ? '_blank' : undefined}
          rel={action.isExternal ? 'noreferrer' : undefined}
        >
          {action.label}
        </Button>
      ))}
    </div>
  )}
</Card>

<style>
  .project-card {
    height: 100%;
  }

  .project-card__title {
    display: grid;
    gap: var(--space-3);
  }

  .project-card__meta,
  .project-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    align-items: center;
  }

  .project-card h3,
  .project-card p {
    margin: 0;
  }

  .project-card__title-link {
    color: inherit;
    text-decoration-color: rgba(215, 163, 182, 0.6);
    text-underline-offset: 0.2em;
  }

  .project-card__title-link:hover,
  .project-card__title-link:focus-visible {
    text-decoration-color: rgba(201, 184, 230, 0.8);
  }

  .project-card p {
    line-height: var(--line-relaxed);
  }
</style>
